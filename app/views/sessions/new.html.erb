<div class="container mt-5">
  <div class="pt-3 pb-3">
    <h4 class="text-center display-5 mb-4">Login To Your Account</h4>
    
    <div class="bg-light shadow rounded p-4 mb-4">
      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <div class="form-group row">
        <div class="col-3">
          <%= f.label :email, class: "col-form-label font-weight-bold text-left" %>
        </div>
        <div class="col-9">
          <%= f.email_field :email, class: "form-control w-100", placeholder: "Enter your email address" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-3">
          <%= f.label :password, class: "col-form-label font-weight-bold text-left" %>
        </div>
        <div class="col-9">
          <%= f.password_field :password, class: "form-control w-100", placeholder: "Enter your password" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 text-center">
          <%= f.submit "Login", class: "btn btn-danger" %>
        </div>
      </div>
      </p>
      <% end %>
    </div>
  </div>
</div>