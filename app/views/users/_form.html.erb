<%= render 'shared/form_errors', obj: @user %>
<div class="bg-light shadow rounded p-4 mb-4">
  <%= form_with(model: @user, local: true) do |f| %>
  <div class="form-group row">
    <div class="col-3">
      <%= f.label :username, class: "col-form-label font-weight-bold text-left" %>
    </div>
    <div class="col-9">
      <%= f.text_field :username, class: "form-control w-100", placeholder: "Enter a username" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
      <%= f.label :email, class: "col-form-label font-weight-bold text-left" %>
    </div>
    <div class="col-9">
      <%= f.email_field :email, class: "form-control w-100", placeholder: "Enter your email address" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
      <%= f.label :password, class: "col-form-label font-weight-bold text-left" %>
    </div>
    <div class="col-9">
      <%= f.password_field :password, class: "form-control w-100", placeholder: "Enter a password" %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-danger") %>
    </div>
  </div>
  </p>
  <% end %>
</div>