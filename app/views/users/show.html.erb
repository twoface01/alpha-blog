<div class="container mt-5">
  <div class="pt-3 pb-3">
    <h4 class="text-center display-5 mb-4">View <%= @user.username %>'s Profile</h4>
    
    <%= gravatar_for @user, size: 200 %>
    
    <% if logged_in? && @user == current_user %>
      <div class="text-center mt-4 mb-4">
        <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-danger" %>
      </div>
    <% end %>
    
    <h5 class="text-center display-5 mt-4 mb-4">Articles</h5>
    
    <% if @articles.count > 4 %>
      <div class="apple_pagination shadow mb-3">
        <%= will_paginate @articles, :container => false %>
      </div>
    <% end %>
    
    <% if @articles.count > 0 %>
      <%= render 'articles/article' %>
    <% else %>
      <div class="row">
        <div class="col-12 text-center">
          This user has not published any articles!
        </div>
      </div>
    <% end %>
    
    <% if @articles.count > 4 %>
      <div class="apple_pagination shadow mb-3">
        <%= will_paginate @articles, :container => false %>
      </div>
    <% end %>
    
  </div>
</div>