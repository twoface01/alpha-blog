<%= render 'shared/form_errors', obj: @article %>
<div class="bg-light shadow rounded p-4 mb-4">
  <%= form_with(model: @article, local: true) do |f| %>
  <div class="form-group row">
    <div class="col-3">
      <%= f.label :title, class: "col-form-label font-weight-bold text-left" %>
    </div>
    <div class="col-9">
      <%= f.text_field :title, class: "form-control w-100", placeholder: "Enter a title" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
      <%= f.label :description, class: "col-form-label font-weight-bold text-left" %>
    </div>
    <div class="col-9">
      <%= f.text_area :description, rows: 5, class: "form-control w-100", placeholder: "Enter a description" %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <%= f.submit "Submit Article", class: "btn btn-danger" %>
    </div>
  </div>
  </p>
  <% end %>
</div>