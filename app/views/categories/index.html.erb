<div class="container mt-3">
  <div class="pt-3 pb-3">
    <h4 class="text-center display-5 mb-4">Categories</h4>
    
    <% if @categories.count > 4 %>
      <div class="apple_pagination shadow mb-3">
          <%= will_paginate @categories, :container => false %>
      </div>
    <% end %>
    
    <% if @categories.count > 0 %>
      <% @categories.each do |category| %>
    
      <div class="card text-center shadow bg-white rounded mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
          <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
        </div>
        <div class="card-footer text-muted">
          <small>
            Created <%= time_ago_in_words(category.created_at) %> ago
            -
            Updated <%= time_ago_in_words(category.updated_at) %> ago
          </small>
        </div>
      </div>
      
      <% end %>
    <% else %>
      <div class="row">
        <div class="col-12 text-center">
          There are currently no categories!
        </div>
      </div>
    <% end %>
    
    <% if @categories.count > 4 %>
      <div class="apple_pagination shadow mb-3">
          <%= will_paginate @categories, :container => false %>
      </div>
    <% end %>
    
  </div>
</div>